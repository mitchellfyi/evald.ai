<div class="container mx-auto px-4 py-8">
  <div class="flex justify-between items-center mb-8">
    <h1 class="text-3xl font-bold">Evaluation Dashboard</h1>
    <%= button_to "Run Tier 1 on Active Agents", run_all_tier1_admin_evaluations_path, 
        method: :post, class: "bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700" %>
  </div>

  <!-- Stats Cards -->
  <div class="grid grid-cols-2 md:grid-cols-6 gap-4 mb-8">
    <div class="bg-white rounded-lg shadow p-4">
      <div class="text-2xl font-bold"><%= @stats[:total_runs] %></div>
      <div class="text-gray-600 text-sm">Total Runs</div>
    </div>
    <div class="bg-yellow-50 rounded-lg shadow p-4">
      <div class="text-2xl font-bold text-yellow-600"><%= @stats[:pending] %></div>
      <div class="text-gray-600 text-sm">Pending</div>
    </div>
    <div class="bg-blue-50 rounded-lg shadow p-4">
      <div class="text-2xl font-bold text-blue-600"><%= @stats[:running] %></div>
      <div class="text-gray-600 text-sm">Running</div>
    </div>
    <div class="bg-green-50 rounded-lg shadow p-4">
      <div class="text-2xl font-bold text-green-600"><%= @stats[:completed] %></div>
      <div class="text-gray-600 text-sm">Completed</div>
    </div>
    <div class="bg-red-50 rounded-lg shadow p-4">
      <div class="text-2xl font-bold text-red-600"><%= @stats[:failed] %></div>
      <div class="text-gray-600 text-sm">Failed</div>
    </div>
    <div class="bg-purple-50 rounded-lg shadow p-4">
      <div class="text-2xl font-bold text-purple-600"><%= @stats[:pass_rate] %>%</div>
      <div class="text-gray-600 text-sm">Pass Rate</div>
    </div>
  </div>

  <!-- Navigation -->
  <div class="mb-6">
    <%= link_to "View Eval Tasks →", tasks_admin_evaluations_path, class: "text-blue-600 hover:underline" %>
  </div>

  <!-- Recent Runs Table -->
  <div class="bg-white rounded-lg shadow overflow-hidden">
    <div class="px-6 py-4 border-b">
      <h2 class="text-xl font-semibold">Recent Evaluation Runs</h2>
    </div>
    <table class="min-w-full divide-y divide-gray-200">
      <thead class="bg-gray-50">
        <tr>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Agent</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Task</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Status</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Duration</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Tokens</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Created</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase"></th>
        </tr>
      </thead>
      <tbody class="bg-white divide-y divide-gray-200">
        <% @eval_runs.each do |run| %>
          <tr>
            <td class="px-6 py-4 whitespace-nowrap">
              <%= link_to run.agent.name, admin_agent_path(run.agent), class: "text-blue-600 hover:underline" %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap">
              <span class="text-sm"><%= run.eval_task.name %></span>
              <span class="text-xs text-gray-500 block"><%= run.eval_task.category %></span>
            </td>
            <td class="px-6 py-4 whitespace-nowrap">
              <% status_color = { "pending" => "yellow", "running" => "blue", "completed" => "green", "failed" => "red" }[run.status] || "gray" %>
              <span class="px-2 py-1 text-xs rounded-full bg-<%= status_color %>-100 text-<%= status_color %>-800">
                <%= run.status %>
              </span>
              <% if run.passed? %>
                <span class="ml-1 text-green-600">✓</span>
              <% elsif run.status == "completed" %>
                <span class="ml-1 text-red-600">✗</span>
              <% end %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
              <%= run.duration_seconds&.round(2) %>s
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
              <%= run.tokens_used %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
              <%= time_ago_in_words(run.created_at) %> ago
            </td>
            <td class="px-6 py-4 whitespace-nowrap">
              <%= link_to "View", admin_evaluation_path(run), class: "text-blue-600 hover:underline text-sm" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
