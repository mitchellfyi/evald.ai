<div class="container mx-auto px-4 py-8">
  <div class="mb-6">
    <%= link_to "← Back to Evaluations", admin_evaluations_path, class: "text-blue-600 hover:underline" %>
  </div>

  <div class="bg-white rounded-lg shadow overflow-hidden">
    <div class="px-6 py-4 border-b flex justify-between items-center">
      <h1 class="text-2xl font-bold">Evaluation Run #<%= @eval_run.id %></h1>
      <% status_color = { "pending" => "yellow", "running" => "blue", "completed" => "green", "failed" => "red" }[@eval_run.status] || "gray" %>
      <span class="px-3 py-1 rounded-full bg-<%= status_color %>-100 text-<%= status_color %>-800 font-medium">
        <%= @eval_run.status.upcase %>
        <% if @eval_run.passed? %>✓<% elsif @eval_run.status == "completed" %>✗<% end %>
      </span>
    </div>

    <div class="p-6 grid grid-cols-2 gap-6">
      <!-- Left Column -->
      <div>
        <h2 class="text-lg font-semibold mb-4">Details</h2>
        <dl class="space-y-3">
          <div>
            <dt class="text-sm text-gray-500">Agent</dt>
            <dd class="font-medium"><%= link_to @eval_run.agent.name, admin_agent_path(@eval_run.agent), class: "text-blue-600 hover:underline" %></dd>
          </div>
          <div>
            <dt class="text-sm text-gray-500">Task</dt>
            <dd class="font-medium"><%= @eval_run.eval_task.name %></dd>
          </div>
          <div>
            <dt class="text-sm text-gray-500">Category</dt>
            <dd><span class="px-2 py-1 bg-gray-100 rounded text-sm"><%= @eval_run.eval_task.category %></span></dd>
          </div>
          <div>
            <dt class="text-sm text-gray-500">Difficulty</dt>
            <dd><%= @eval_run.eval_task.difficulty || "N/A" %></dd>
          </div>
          <div>
            <dt class="text-sm text-gray-500">Duration</dt>
            <dd><%= @eval_run.duration_seconds&.round(2) || "N/A" %> seconds</dd>
          </div>
          <div>
            <dt class="text-sm text-gray-500">Tokens Used</dt>
            <dd><%= @eval_run.tokens_used || "N/A" %></dd>
          </div>
          <div>
            <dt class="text-sm text-gray-500">Started</dt>
            <dd><%= @eval_run.started_at&.strftime("%Y-%m-%d %H:%M:%S UTC") || "Not started" %></dd>
          </div>
          <div>
            <dt class="text-sm text-gray-500">Completed</dt>
            <dd><%= @eval_run.completed_at&.strftime("%Y-%m-%d %H:%M:%S UTC") || "Not completed" %></dd>
          </div>
        </dl>
      </div>

      <!-- Right Column -->
      <div>
        <h2 class="text-lg font-semibold mb-4">Metrics</h2>
        <% if @eval_run.metrics.present? %>
          <div class="bg-gray-50 rounded p-4">
            <pre class="text-sm overflow-auto"><%= JSON.pretty_generate(@eval_run.metrics) %></pre>
          </div>
        <% else %>
          <p class="text-gray-500">No metrics available yet.</p>
        <% end %>
      </div>
    </div>

    <!-- Task Prompt -->
    <div class="px-6 py-4 border-t">
      <h2 class="text-lg font-semibold mb-2">Task Prompt</h2>
      <div class="bg-gray-50 rounded p-4">
        <pre class="text-sm whitespace-pre-wrap"><%= @eval_run.eval_task.prompt %></pre>
      </div>
    </div>

    <!-- Agent Output -->
    <div class="px-6 py-4 border-t">
      <h2 class="text-lg font-semibold mb-2">Agent Output</h2>
      <% if @eval_run.agent_output.present? %>
        <div class="bg-gray-50 rounded p-4">
          <pre class="text-sm whitespace-pre-wrap overflow-auto max-h-96"><%= @eval_run.agent_output %></pre>
        </div>
      <% else %>
        <p class="text-gray-500">No output recorded.</p>
      <% end %>
    </div>
  </div>
</div>
