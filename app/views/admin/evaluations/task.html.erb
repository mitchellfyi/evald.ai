<div class="container mx-auto px-4 py-8">
  <div class="mb-6">
    <%= link_to "← Back to Tasks", tasks_admin_evaluations_path, class: "text-blue-600 hover:underline" %>
  </div>

  <div class="bg-white rounded-lg shadow overflow-hidden mb-8">
    <div class="px-6 py-4 border-b">
      <h1 class="text-2xl font-bold"><%= @eval_task.name %></h1>
      <div class="flex gap-2 mt-2">
        <span class="px-2 py-1 bg-blue-100 text-blue-800 rounded text-sm"><%= @eval_task.category %></span>
        <% if @eval_task.difficulty %>
          <span class="px-2 py-1 bg-gray-100 rounded text-sm"><%= @eval_task.difficulty %></span>
        <% end %>
      </div>
    </div>

    <div class="p-6 grid grid-cols-2 gap-6">
      <div>
        <h2 class="text-lg font-semibold mb-2">Description</h2>
        <p class="text-gray-600"><%= @eval_task.description %></p>

        <h2 class="text-lg font-semibold mb-2 mt-6">Prompt</h2>
        <div class="bg-gray-50 rounded p-4">
          <pre class="text-sm whitespace-pre-wrap"><%= @eval_task.prompt %></pre>
        </div>
      </div>

      <div>
        <h2 class="text-lg font-semibold mb-2">Expected Output</h2>
        <% if @eval_task.expected_output.present? %>
          <div class="bg-gray-50 rounded p-4">
            <pre class="text-sm overflow-auto"><%= JSON.pretty_generate(@eval_task.expected_output) %></pre>
          </div>
        <% else %>
          <p class="text-gray-500">No expected output defined.</p>
        <% end %>

        <h2 class="text-lg font-semibold mb-2 mt-6">Settings</h2>
        <dl class="space-y-2">
          <div class="flex justify-between">
            <dt class="text-gray-500">Timeout</dt>
            <dd><%= @eval_task.timeout_seconds %> seconds</dd>
          </div>
          <div class="flex justify-between">
            <dt class="text-gray-500">Max Tokens</dt>
            <dd><%= @eval_task.max_tokens || "Unlimited" %></dd>
          </div>
        </dl>
      </div>
    </div>
  </div>

  <!-- Recent Runs -->
  <div class="bg-white rounded-lg shadow overflow-hidden">
    <div class="px-6 py-4 border-b">
      <h2 class="text-xl font-semibold">Recent Runs (<%= @recent_runs.count %>)</h2>
    </div>
    <% if @recent_runs.any? %>
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Agent</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Status</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Duration</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">When</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase"></th>
          </tr>
        </thead>
        <tbody class="divide-y divide-gray-200">
          <% @recent_runs.each do |run| %>
            <tr>
              <td class="px-6 py-4">
                <%= link_to run.agent.name, admin_agent_path(run.agent), class: "text-blue-600 hover:underline" %>
              </td>
              <td class="px-6 py-4">
                <% status_color = { "pending" => "yellow", "running" => "blue", "completed" => "green", "failed" => "red" }[run.status] || "gray" %>
                <span class="px-2 py-1 text-xs rounded-full bg-<%= status_color %>-100 text-<%= status_color %>-800">
                  <%= run.status %>
                </span>
                <% if run.passed? %>✓<% elsif run.status == "completed" %>✗<% end %>
              </td>
              <td class="px-6 py-4 text-sm text-gray-500">
                <%= run.duration_seconds&.round(2) %>s
              </td>
              <td class="px-6 py-4 text-sm text-gray-500">
                <%= time_ago_in_words(run.created_at) %> ago
              </td>
              <td class="px-6 py-4">
                <%= link_to "View", admin_evaluation_path(run), class: "text-blue-600 hover:underline text-sm" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <% else %>
      <div class="p-6 text-gray-500">No runs yet for this task.</div>
    <% end %>
  </div>
</div>
