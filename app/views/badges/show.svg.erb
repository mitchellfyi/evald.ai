<%
  score = @agent.decayed_score&.round || 'N/A'
  label = 'evald'
  
  color = case @agent.decayed_score.to_f
          when 90..100 then '#4ade80' # green
          when 80..89 then '#22c55e'
          when 70..79 then '#eab308' # yellow
          when 60..69 then '#f59e0b'
          when 50..59 then '#f97316' # orange
          when 1..49 then '#ef4444' # red
          else '#9ca3af' # gray
          end
  
  label_width = label.length * 7 + 10
  score_width = score.to_s.length * 8 + 10
  total_width = label_width + score_width
-%>
<svg xmlns="http://www.w3.org/2000/svg" width="<%= total_width %>" height="20">
  <linearGradient id="b" x2="0" y2="100%">
    <stop offset="0" stop-color="#bbb" stop-opacity=".1"/>
    <stop offset="1" stop-opacity=".1"/>
  </linearGradient>
  <clipPath id="a">
    <rect width="<%= total_width %>" height="20" rx="3" fill="#fff"/>
  </clipPath>
  <g clip-path="url(#a)">
    <rect width="<%= label_width %>" height="20" fill="#555"/>
    <rect x="<%= label_width %>" width="<%= score_width %>" height="20" fill="<%= color %>"/>
    <rect width="<%= total_width %>" height="20" fill="url(#b)"/>
  </g>
  <g fill="#fff" text-anchor="middle" font-family="Verdana,Geneva,DejaVu Sans,sans-serif" font-size="11">
    <text x="<%= label_width / 2 %>" y="15" fill="#010101" fill-opacity=".3"><%= label %></text>
    <text x="<%= label_width / 2 %>" y="14"><%= label %></text>
    <text x="<%= label_width + score_width / 2 %>" y="15" fill="#010101" fill-opacity=".3"><%= score %></text>
    <text x="<%= label_width + score_width / 2 %>" y="14"><%= score %></text>
  </g>
</svg>
